 <div class="beer-details">
        <img src="{{beer.image_url}}" alt="{{beer.name}} Image" class="beer-image">
        <div class="beer-description">
            <h2>{{beer.name}}</h2>
            <p class="opacity">{{beer.tagline}}</p>
            <p>{{beer.description}}</p>
            <p><strong>Food Pairing:</strong></p>
            <ul>
                {{#each beer.food_pairing}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><strong>Brewers Tips:</strong> {{beer.brewers_tips}}</p>
        </div>
    </div>
  


